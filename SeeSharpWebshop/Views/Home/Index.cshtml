@model List<SeeSharpWebshop.Project.Core.Models.ProductModel>
@{
    ViewData["Title"] = "Home Page";
}

<h2>HERE WILL BE SHOP SOON, BE PATIENCE PLEES!</h2>
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-lg-2 col-md-4 col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">@product.Name</h3>
                </div>
                <div class="panel-body">
                    @product.Description
                </div>
                <div class="panel-footer">@product.Price kr<a href="Home/AddItemToCart/@product.Id" class="pull-right add-to-cart"><span class="glyphicon glyphicon-plus"></span></a></div>
            </div>
        </div>
    }
</div>